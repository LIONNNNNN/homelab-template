    # Production Servers
# ---

resource "proxmox_vm_qemu" "srv-prod-1" {
    name = "srv-prod-1"
    desc = "Server Production 1, Main Application Server, Ubuntu LTS"
    agent = 1
    target_node = "prx-prod-2"

    tags = "docker"

    onboot = true
    automatic_reboot = true
    qemu_os = "other"

    # -- only important for full clone
    # vmid = 20002
    # clone = "ubuntu-server-test-1"
    # full_clone = true
    full_clone = false
    define_connection_info = false
    oncreate = false

    cores = 3
    sockets = 1
    cpu = "host"
    memory = 6144

    network {
        bridge = "vmbr1"
        model  = "virtio"
    }

    scsihw = "virtio-scsi-pci"

    disk {
        storage = "pv1"
        type = "virtio"
        size = "40G"
        iothread = 1
    }
    
    # Cloud Init Settings 
    os_type = "cloud-init" 
    ipconfig0 = "ip=10.20.0.2/16,gw=10.20.0.1"
    nameserver = "10.20.0.1"
    ciuser = "xcad"
    sshkeys = <<EOF
    ssh-rsa  WSL2/XWIN
    EOF
}
